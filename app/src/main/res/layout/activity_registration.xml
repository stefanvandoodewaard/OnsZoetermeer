<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <FrameLayout
        android:id="@+id/basic_frame"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/colorPrimary">

    </FrameLayout>

    <GridLayout
        android:id="@+id/registration_input_grid"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <EditText
        android:id="@+id/reg_input_mail"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_marginBottom="5dp"
        android:ems="12"
        android:hint="E-mail" />

    <EditText
        android:id="@+id/reg_input_fname"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"
        android:layout_marginBottom="5dp"
        android:ems="12"
        android:hint="Voornaam" />

    <EditText
        android:id="@+id/reg_input_lname"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="4"

        android:ems="12"
        android:hint="Achternaam (Optioneel)" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_column="1"
        android:layout_row="5"
        android:orientation="horizontal"
        android:textAlignment="center">

        <RadioButton
            android:id="@+id/male"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Man"
            android:textSize="20sp">
        </RadioButton>

        <RadioButton
            android:id="@+id/female"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vrouw"
            android:textSize="20sp">
        </RadioButton>

    </RadioGroup>

    <EditText
        android:id="@+id/reg_input_pw1"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="6"
        android:ems="12"
        android:layout_marginBottom="5dp"
        android:hint="Wachtwoord"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/reg_input_pw2"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="7"
        android:ems="12"
        android:hint="Wachtwoord (controle)"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registration_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="8"
        android:onClick="validateRegistration"
        android:text="Account aanmaken" />
    </GridLayout>

    <ImageView
        android:id="@+id/ons_zoetermeer_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:src="@drawable/ic_logoscreen_logo_medium" />

</RelativeLayout>
