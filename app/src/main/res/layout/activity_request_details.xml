<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/basic_frame"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/request_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="@string/help_header"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="40sp" />

    </FrameLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">


        <EditText
            android:id="@+id/request_input"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:background="@drawable/edittext_rounded"
            android:hint="Omschrijf uw hulpverzoek"
            android:inputType="textMultiLine" />


        <Button
            android:id="@+id/request_send_button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="@drawable/button_rounded"
            android:letterSpacing="0.1"
            android:onClick="onClick"
            android:text="Versturen"
            android:textAllCaps="false"
            android:textColor="@color/ColorText" />
    </GridLayout>

</LinearLayout>
