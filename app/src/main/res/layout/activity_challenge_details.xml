<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/challenge_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/challenge_details_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:textAlignment="center"
            android:textColor="@color/ColorText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/switch_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="4"
            android:text="@string/switch_details" />

        <Switch
            android:id="@+id/switch_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_row="5"
            android:text="@string/switch_text"
            android:textSize="18sp"
            android:trackTint="@color/colorPrimaryLight"
            tools:ignore="UnusedAttribute" />

        <Button
            android:id="@+id/challenge_back_button"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_row="6"
            android:background="@drawable/button_rounded"
            android:letterSpacing="0.1"
            android:onClick="onClick"
            android:text="@string/challenge_details_back_button"
            android:textAllCaps="false"
            android:textColor="@color/ColorText" />

    </GridLayout>

</LinearLayout>
